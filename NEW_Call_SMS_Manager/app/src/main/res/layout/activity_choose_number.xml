<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseNumber">

    <TextView
        android:id="@+id/textViewEmergency"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="168dp"
        android:text="Emergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewFire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="168dp"
        android:text="Firefighters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmergency"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewPolice"
        android:layout_width="59dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="180dp"
        android:text="Police"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFire"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="101dp"
        android:layout_height="153dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessLeaf,TextSizeCheck">

        <RadioButton
            android:id="@+id/radioButtonEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="chooseNumber"
            android:text="111111"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radioButtonFire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="chooseNumber"
            android:text="222222"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radioButtonPolice"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:onClick="chooseNumber"
            android:text="333333"
            tools:ignore="HardcodedText" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>